{
  "name": "do-end-match",
  "displayName": "do...end Match",
  "description": "Visibly matches do end blocks like brackets.",
  "version": "1.1.1",
  "publisher": "Taber",
  "repository": {
    "type": "git",
    "url": "https://github.com/TaberIV/do...endMatch"
  },
  "bugs": {
    "url": "https://github.com/TaberIV/do...endMatch/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.jump",
        "title": "Jump to do/end"
      }
    ],
    "keybindings": [
      {
        "command": "extension.jump",
        "key": "alt+shift+\\",
        "mac": "ctrl+shift+\\",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "do...end match",
      "properties": {
        "doEndMatch.dict": {
          "type": "object",
          "default": {
            "open": [
              "do",
              "fn"
            ],
            "close": [
              "end"
            ]
          },
          "description": "The words to match. Any combination of words in open and close will trigger matches."
        },
        "doEndMatch.style": {
          "type": "object",
          "default": {
            "borderWidth": "1px",
            "borderStyle": "none none solid none"
          },
          "description": "Custom style for matching do...end blocks"
        },
        "doEndMatch.wordSeparators": {
          "type": "string",
          "default": " \n\t`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
          "description": "Characters that will be used as word separators when looking for do/end."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.9.2",
    "vscode": "^1.1.18",
    "tslint": "^5.10.0",
    "@types/node": "^10.5.2",
    "@types/mocha": "^5.2.4"
  }
}
